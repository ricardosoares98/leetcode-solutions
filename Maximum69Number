// Problem
// You are given a positive integer num consisting only of digits 6 and 9.
// Return the maximum number you can get by changing at most one digit (6 becomes 9, and 9 becomes 6).

public class Solution
{
    public int Maximum69Number(int num)
    {
        var response = "";
        var firstSixFound = false;

        //Loop every number, if number is a six, mark flag as found
        //fill the remaing numbers and return
        foreach (char singularNumber in num.ToString())
        {
            if (!firstSixFound && singularNumber.Equals('6'))
            {
                firstSixFound = true;
                response = response + '9';
            }
            else
            {
                response = response + singularNumber;
            }
        }

        return Convert.ToInt32(response);
    }
}